                    android:key="system-COS2-sensor2-path"
                    android:title="Path" />

                <ListPreference
                    android:entries="@array/sensor_types"
                    android:entryValues="@array/sensor_types_keys"
                    android:key="system-COS2-sensor2-type"
                    android:title="Type" />
            </PreferenceCategory>
            <PreferenceCategory android:title="Sensor #3" >
                <EditTextPreference
                    android:key="system-COS2-sensor3-path"
                    android:title="Path" />

                <ListPreference
                    android:entries="@array/sensor_types"
                    android:entryValues="@array/sensor_types_keys"
                    android:key="system-COS2-sensor3-type"
                    android:title="Type" />
            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>